syntax on
set shiftwidth=4
set tabstop=4
set wildmode=longest,list,full
filetype plugin on
autocmd FileType css setlocal shiftwidth=2 noexpandtab tabstop=2
autocmd FileType html setlocal shiftwidth=2 noexpandtab tabstop=2
autocmd FileType javascript setlocal shiftwidth=2 noexpandtab tabstop=2
autocmd FileType markdown setlocal textwidth=80 shiftwidth=4 expandtab tabstop=4 spell spelllang=en_gb
